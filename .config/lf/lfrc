set dircounts
set drawbox
set hidden
set mouse
set tabstop 4
set preview
set ratios 1:2:3
set previewer ~/.config/lf/previewer.sh

cmd open &{{
  case $(file --mime-type -Lb $f) in
    text/*) lf -remote "send $id \$hx \$fx";;
    *) for f in $fx; do xdg-open $f > /dev/null 2> /dev/null & done;;
  esac
}}

cmd lazygit $lazygit

map <backspace2>g lazygit
map D :delete $fx
